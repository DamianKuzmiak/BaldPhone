<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_row_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/day"
        style="@style/BackgroundText.Medium.Plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="bottom"
        android:paddingHorizontal="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        tools:text="02/04/2005"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_clock" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/ButtonsText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            tools:text="21:37" />

        <ImageView
            android:id="@+id/iv_call_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            tools:src="@drawable/call_received_on_button" />

        <TextView
            android:id="@+id/tv_call_type"
            style="@style/ButtonsText.Medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="@string/received" />

        <ImageView
            android:id="@+id/iv_calltime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calltime"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_duration"
            style="@style/ButtonsText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            tools:text="05:15" />
    </LinearLayout>
</LinearLayout>