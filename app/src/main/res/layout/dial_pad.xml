<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?bald_background"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/number_container"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/dial_number_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="start"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="58dp"
            android:singleLine="true"
            android:textColor="?bald_text_on_key"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/b_backspace"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="@string/backspace"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_backspace"
            app:tint="?bald_text_on_key" />
    </RelativeLayout>

    <GridLayout
        android:id="@+id/dialPad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toTopOf="@+id/b_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_container">

        <Button
            android:id="@+id/b_1"
            style="@style/DialerButton"
            android:text="1" />

        <Button
            android:id="@+id/b_2"
            style="@style/DialerButton"
            android:text="2" />

        <Button
            android:id="@+id/b_3"
            style="@style/DialerButton"
            android:text="3" />

        <Button
            android:id="@+id/b_4"
            style="@style/DialerButton"
            android:text="4" />

        <Button
            android:id="@+id/b_5"
            style="@style/DialerButton"
            android:text="5" />

        <Button
            android:id="@+id/b_6"
            style="@style/DialerButton"
            android:text="6" />

        <Button
            android:id="@+id/b_7"
            style="@style/DialerButton"
            android:text="7" />

        <Button
            android:id="@+id/b_8"
            style="@style/DialerButton"
            android:text="8" />

        <Button
            android:id="@+id/b_9"
            style="@style/DialerButton"
            android:text="9" />

        <Button
            android:id="@+id/b_star"
            style="@style/DialerButton"
            android:text="*" />

        <Button
            android:id="@+id/b_0"
            style="@style/DialerButton"
            android:text="0" />

        <Button
            android:id="@+id/b_hash"
            style="@style/DialerButton"
            android:text="#" />
    </GridLayout>

    <ImageButton
        android:id="@+id/b_call"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/call_button_circle"
        android:contentDescription="@string/call"
        android:src="@drawable/phone_on_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/bald_background_light" />
</androidx.constraintlayout.widget.ConstraintLayout>
