<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/home_screen_padding"
    android:gravity="center_horizontal"
    android:baselineAligned="false">

    <!-- Notifications + Clock area (larger) -->
    <include
        layout="@layout/notification_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Buttons area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center"
        android:baselineAligned="false">

        <!-- First row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="6dp">

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_contacts"
                style="@style/HomeButtonTile.AccentGreen"
                android:layout_marginEnd="8dp"
                app:__src="@drawable/human_on_background"
                app:__text="@string/contacts" />

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_recent"
                style="@style/HomeButtonTile.AccentGreen"
                android:layout_marginEnd="8dp"
                app:__src="@drawable/history_on_background"
                app:__text="@string/recent" />

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_dialer"
                style="@style/HomeButtonTile.AccentGreen"
                app:__src="@drawable/phone_on_background"
                app:__text="@string/dialer" />
        </LinearLayout>

        <!-- Second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="6dp">

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_camera"
                style="@style/HomeButtonTile.AccentBlue"
                android:layout_marginEnd="8dp"
                app:__src="@drawable/camera_on_background"
                app:__text="@string/camera" />

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_whatsapp"
                style="@style/HomeButtonTile.AccentBlue"
                android:layout_marginEnd="8dp"
                app:__src="@drawable/whatsapp_on_background"
                app:__text="@string/whatsapp" />

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_messages"
                style="@style/HomeButtonTile.AccentBlue"
                app:__src="@drawable/message_on_background"
                app:__text="@string/messages" />
        </LinearLayout>

        <!-- Third row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_emergency"
                style="@style/HomeButtonTile.AccentPurple"
                android:layout_marginEnd="8dp"
                app:__src="@drawable/emergency"
                app:__text="@string/sos" />

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_assistant"
                style="@style/HomeButtonTile.AccentPurple"
                android:layout_marginEnd="8dp"
                app:__src="@drawable/voice_on_background"
                app:__text="@string/assistant" />

            <com.bald.uriah.baldphone.views.FirstPageAppIcon
                android:id="@+id/bt_lock_screen"
                style="@style/HomeButtonTile.AccentPurple"
                app:__src="@drawable/icon_lock_outline"
                app:__text="@string/label_lock_screen_short" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

