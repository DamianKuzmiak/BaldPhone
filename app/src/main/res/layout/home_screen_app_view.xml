<com.bald.uriah.baldphone.views.BaldLinearLayoutButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bt_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_for_buttons"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:importantForAccessibility="no"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:maxLines="2"
            android:lines="2"
            android:textColor="?bald_text_on_button"
            android:textSize="@dimen/large"
            android:textStyle="bold" />

</com.bald.uriah.baldphone.views.BaldLinearLayoutButton>