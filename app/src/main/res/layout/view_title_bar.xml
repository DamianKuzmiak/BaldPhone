<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/titleBarRoot"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:paddingHorizontal="5dp">

        <View
            android:id="@+id/btnMoreSpace"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />

        <!-- More button (start) -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/more_vertical"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Title centered -->
        <TextView
            android:id="@+id/txtTitle"
            style="@style/BackgroundText.Medium.Plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/btnExit"
            android:layout_toEndOf="@id/btnMoreSpace"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            tools:text="@android:string/untitled" />

        <!-- Exit button (end) -->
        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@android:string/cancel"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/close_on_background" />

    </RelativeLayout>
</merge>
